<!DOCTYPE html>
<html>
  <head>
    <title>EScore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
    <%# ヘッダー %>
    <%= render 'layouts/header' %>
    <%# body %>
    <div class="body">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <p id="notice"><%= notice %></p>
          </div>
        </div>
      </div>
      <%= yield %>
    </div>

    <%# フッター %>
    <%#= render 'layouts/footer' %>
    </div>
  </body>
</html>
